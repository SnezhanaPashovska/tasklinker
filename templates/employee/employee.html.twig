{% extends 'base.html.twig' %}

{% block title %}
	{{ employee.name }}
	{{ employee.lastName }}
{% endblock %}

{% block body %}


	<form name="employee" method="post" action="{{ path('employee_edit', { 'id': employee.id }) }}">
		<input
		type="hidden" name="_token" value="{{ csrf_token('employee_edit') }}">
		<!-- CSRF token to ensure the form is submitted securely.-->

		<div class="form-group col-md-6">
			{{ form_row(form.last_name) }}
		</div>
		<div class="form-group col-md-6">
			{{ form_row(form.name) }}
		</div>
		<div class="form-group col-md-6">
			{{ form_row(form.email) }}
		</div>
		<div class="form-row">
			<div class="form-group date">
				{{ form_row(form.arrival_date) }}
			</div>
			<div class="form-group contract">
				{{ form_row(form.contract) }}
			</div>
		</div>
		<button class="button button-submit">Enregistrer</button>

	</form>

</div>{% endblock %}
