{% extends 'base-subscription.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

	<div class="subscription-form">

		<h1>Se connecter</h1>

		{% if error %}
			<div class="error-login">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		<div class="form">
			<form action="{{ path('connect_employee') }}" method="post">
				<label for="email">Email :</label>
				<input type="email" id="email" name="email" value="{{ email|default('') }}">

				<label for="password">Mot de passe :</label>
				<input type="password" id="password" name="password">

				<button type="submit" class="button-continue">Continuer</button>

			</form>
		</div>

		<div class="creation-compte">
			<a href="{{ path('add_employee') }}">
				Pas de compte ?
				<span class="inscrire">Sâ€™inscrire</span>
			</a>
		</div>

	</div>
{% endblock %}
