{% extends 'base-subscription.html.twig' %}

{% block title %}
{% endblock %}

{% block body %}

	<div class="subscription-form">
		<h1>S’inscrire</h1>

		<div class="form" method="post" action="{{ path('add_employee') }}">
			{{ form_start(form) }}
      
			{{ form_row(form.last_name, {'label': 'Nom'}) }}
			{{ form_row(form.name, {'label': 'Prénom'}) }}
			{{ form_row(form.email, {'label': 'E-mail'}) }}
			{{ form_row(form.password.first, {'label': 'Mot de passe'}) }}
			{{ form_row(form.password.second, {'label': 'Confirmation du mot de passe'}) }}

			<button type="submit" class="button-continue">Continuer</button>
			{{ form_end(form) }}
		</div>
		<div class="creation-compte">
			<a href="{{ path('connect_employee') }}">
				Vous avez déjà un compte?
			</a>
		</div>

	</div>
{% endblock %}
